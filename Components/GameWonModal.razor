
@namespace AnimeMaze.CustomComponents
<div class="fixed inset-0 z-50 bg-black/50 backdrop-blur-sm flex items-center justify-center p-4 animate-fade-in">
    <article class="bg-gradient-to-br from-purple-900 to-pink-900 rounded-2xl shadow-2xl max-w-md w-full p-8 text-center
                  border border-white/10 transform transition-all">
        <h2 class="text-3xl font-bold bg-gradient-to-r from-white to-pink-200 bg-clip-text text-transparent mb-2">
            Â¡Victoria!
        </h2>
        <p class="text-xl text-gray-100 mb-6">@Message</p>
        
        <div class="grid gap-3">
            <button @onclick="ResetGame"
                    class="w-full py-3 px-6 bg-white/10 hover:bg-white/20 text-gray-100 rounded-xl
                           transition-all flex items-center justify-center gap-2 font-semibold">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                </svg>
                Reiniciar Juego
            </button>
            
            <button @onclick="SelectNewCharacters"
                    class="w-full py-3 px-6 bg-pink-600/30 hover:bg-pink-600/50 text-pink-100 rounded-xl
                           transition-all flex items-center justify-center gap-2 font-semibold">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
                Nuevos Personajes
            </button>
        </div>
    </article>
</div>

<style>
    .animate-fade-in {
        animation: fadeIn 0.3s ease-out forwards;
    }

    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
</style>

@code {
    [Parameter] public string? Message { get; set; }
    [Parameter] public EventCallback OnResetGame { get; set; }
    [Parameter] public EventCallback OnSelectNewCharacters { get; set; }

    private void ResetGame()
    {
        OnResetGame.InvokeAsync();
    }

    private void SelectNewCharacters()
    {
        OnSelectNewCharacters.InvokeAsync();
    }
}
